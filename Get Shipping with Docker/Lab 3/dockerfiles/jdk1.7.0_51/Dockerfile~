# JDK 1.7.0_51 Docker image is based off centos
FROM vmaephqcidrh018:5000/centos

# The ECD team maintains this image
MAINTAINER Enterprise Component Delivery Team

# Add Java and setup Java environment
ADD jdk-7u51-linux-x64.tar.gz /appl/java/
#
# Docker now automatically expands added tar files
# when adding to an image. Following lines no 
# longer necessary.
#
# RUN cd /appl/java && tar -xzf jdk-7u51-linux-x64.tar.gz
# RUN cd /appl/java && rm jdk-7u51-linux-x64.tar.gz
#
ENV JAVA_HOME /appl/java/jdk1.7.0_51
ENV PATH /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/appl/java/jdk1.7.0_51/bin


